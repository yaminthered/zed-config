// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "show_edit_predictions": true,
  "edit_predictions": {
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "terminal": {
    "dock": "bottom"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "icon_theme": "JetBrains New UI Icons (Dark)",
  "ui_font_size": 15,
  "buffer_font_size": 15,
  "theme": {
    "mode": "dark",
    "light": "Catppuccin Mocha - No Italics",
    "dark": "Catppuccin Mocha - No Italics"
  },
  "ui_font_family": "Hack Nerd Font",
  "buffer_font_family": "Hack Nerd Font",
  "outline_panel": {
    "dock": null,
    "button": false
  },
  "project_panel": {
    "indent_size": 10
  },
  "notification_panel": {
    "dock": null,
    "button": false
  },
  "collaboration_panel": {
    "dock": null,
    "button": false
  },
  "agent": {
    "default_profile": "ask",
    "dock": "bottom",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "experimental.theme_overrides": {
    "syntax": {
      "comment": {
        "font_style": "normal"
      }
    }
  },
  "telemetry": {
    "diagnostics": true,
    "metrics": false
  },
  "journal": {
    "path": "~",
    "hour_format": "hour24"
  },
  "gutter": {
    "line_numbers": true,
    "code_actions": false,
    "runnables": false,
    "folds": true
  },
  "unnecessary_code_fade": 0.5,
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "rust": {
          "analyzerTargetDir": true
        }
      }
    }
  },
  "auto_install_extension": {
    "catppuccin": true,
    "jetbrains-new-ui-icons": true,
    "git-firefly": true,
    "html": true,
    "emmet": true,
    "env": true,
    "dockerfile": true,
    "live-server": true,
    "toml": true
  },
  "tab_size": 2
}
